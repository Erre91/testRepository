<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/event_CreatorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/event_creator"
        android:src="@drawable/calendar_2" />
    
   	<TextView
        android:id="@+id/event_nameCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/event_CreatorImage"
		android:layout_toLeftOf="@+id/event_StateImg"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="20dp"
		android:ellipsize="end"
	  	android:singleLine="true"
		android:text="togliere@eurecom.fr"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003366" />
   	
   	<ImageView
        android:id="@+id/event_StateImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/event_creator"
        android:src="@drawable/accepted_64_green" />
   	
    <TextView
        android:id="@+id/eventSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_CreatorImage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/event_Subject"
        android:textStyle="bold" 
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003366"/>

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/eventSubject"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
       	android:text="Anche questo da togliere quando tutto sarÃ  pronto"/>

    <TextView
        android:id="@+id/event_textHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDescription"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="10:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <View
        android:id="@+id/item_separator2"
        android:layout_below="@+id/event_textHour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/lvDividerColor"/>
    

</RelativeLayout>
